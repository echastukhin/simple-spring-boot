apiVersion: apps/v1
kind: Deployment
metadata:
  name: ping-pong
spec:
  selector:
      matchLabels:
        app: ping-pong
  replicas: 2
  template:
    metadata:
      labels:
        app: ping-pong
    spec:
      containers:
        - name: ping-pong
          image: ping-pong:0.0.1
          imagePullPolicy: Never
          ports:
            - containerPort: 8085
